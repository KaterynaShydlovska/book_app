<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Book_app</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="styles/baseKat.css">
</head>

<body>
  <header>
    <h1>Best Books!</h1>
  </header>
  <ul>
    <% results.forEach(book => { %>
    <li>
      <h2>Task Name: <%= book.title %></h2>
      <p>Author: <%= book.author %></p>
      <a href="/books/<%= book.id %>">View Task Details</a>
    </li>
    <% }) %>
  <div>
<div class="search"><h2>Search by Title or Author</h2></div>
  <form  action="/searches" method="post">
    <input class ="searchBox" type="text" name="search" placeholder="Enter a title or author" required>

    <fieldset>
      <label for="title">
        <span>Title</span>
        <input type="radio" name="search" value="title" required>
      </label>
    </fieldset>

    <fieldset>
      <label for="author">
        <span>Author</span>
        <input type="radio" name="search" value="author" required>
      </label>
    </fieldset>

    <button type="submit">Search the Google Books API</button>
  </form>
  </div>
  
  <footer></footer>
</body>

</html>